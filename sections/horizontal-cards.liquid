  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "100+ Biomarkers",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "default": "<span>The most comprehensive performance blood panel in the world</span> â€” we assess over 100 biomarkers on their own, in categories, and in performance patterns to build a complete view of you physiology with a bias towards maximizing potential.",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "left-image",
          "label": "Left image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "image_picker",
          "id": "image-mobile",
          "label": "Mobile image"
        }
      ]
    }
  ],
  "default": {
    "settings": {
      "title": "Slideshow"
    },
    "blocks": [
      {
        "type": "block"
      },
      {
        "type": "block"
      }
    ]
  }
}
{% endschema %}
