      "type": "header",
      "content": "Anchor link"
    },
    {
      "type": "text",
      "id": "anchor-link",
      "default": "#",
      "label": "Anchor link"
    },
    {
      "type": "text",
      "id": "anchor-link-title",
      "default": "Join Vitality",
      "label": "Anchor link title"
    },
