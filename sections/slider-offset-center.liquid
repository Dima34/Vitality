{{ 'section-slider-offset-center.css' | asset_url | stylesheet_tag }}
{{ 'slider-offset-center.css' | asset_url | stylesheet_tag }}
{{ 'https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css' | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}

{% assign scheme1 = settings.color_schemes | first %}

<div class="offset-center page-width section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="offset-center__heading">
        <h2 class="font-50-700 color-1b">{{ section.settings.title }}</h2>
        <p class="font-20-400 color-5c">{{ section.settings.subtitle }}</p>
    </div>

    <div class="offset-slider__buttons-container">
        <div class="offset-slider__buttons">
            <div class="offset-slider-{{ section.id }}-button swiper-button-prev offset-slider__button button-secondary">
                <svg width="25" height="25" style="transform: scale(-1,1)" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <mask id="mask0_303_4612" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="25" height="25">
                        <rect x="0.917114" y="0.735352" width="23.5294" height="23.5294" fill="#D9D9D9"/>
                    </mask>
                    <g mask="url(#mask0_303_4612)">
                        <path d="M17.6611 12.9906H5.81909V12.0102H17.6611L11.9824 6.33152L12.6818 5.6377L19.5446 12.5004L12.6818 19.3632L11.9824 18.6694L17.6611 12.9906Z" fill="#9FA7AF"/>
                    </g>
                </svg>
            </div>
            <div class="offset-slider-{{ section.id }}-button swiper-button-next offset-slider__button button-secondary">
                <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <mask id="mask0_303_4612" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="25" height="25">
                        <rect x="0.917114" y="0.735352" width="23.5294" height="23.5294" fill="#D9D9D9"/>
                    </mask>
                    <g mask="url(#mask0_303_4612)">
                        <path d="M17.6611 12.9906H5.81909V12.0102H17.6611L11.9824 6.33152L12.6818 5.6377L19.5446 12.5004L12.6818 19.3632L11.9824 18.6694L17.6611 12.9906Z" fill="#9FA7AF"/>
                    </g>
                </svg>
            </div>
        </div>
    </div>
    
    <div class="swiper offset-slider offset-slider-{{ section.id }}">
        <div class="swiper-wrapper">
            {% assign blocksAmount = section.blocks.size | minus: 1 %}
            {% for i in (0..blocksAmount) %}
                {% assign block = section.blocks[i] %}

                <div class="offset-slide swiper-slide">
                    <div class="offset-slide__image-container">
                        {% if block.settings.image %}
                            {{ block.settings.image | image_url: width: 610 | image_tag: class: "image-container__image" }}
                        {% endif %}
                        <h3 class="image-container__title font-24-400 color-37 text-uppercase">{{ block.settings.title }}</h3>
                        <p class="image-container__subtitle font-12-400 color-17b">{{ block.settings.subtitle }}</p>
                    </div>
                    <div class="offset-slide__text-container">
                        <p class="offset-slide__text font-14-400 color-5c">{{ block.settings.text }}</p>
                        <svg class="offset-slide__mark" width="51" height="38" viewBox="0 0 51 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M28.6011 9.78627C28.6011 7.04655 29.5143 4.8776 31.3408 3.27943C33.2814 1.5671 35.7358 0.710938 38.7038 0.710938C42.3568 0.710938 45.2677 1.79541 47.4367 3.96436C49.7198 6.13331 50.8613 9.32966 50.8613 13.5534C50.8613 17.5488 50.2335 20.9735 48.9778 23.8274C47.7221 26.6812 46.181 29.0785 44.3545 31.0191C42.6421 32.9598 40.8157 34.5009 38.875 35.6424C36.9344 36.6698 35.2791 37.4118 33.9093 37.8685L29.1147 30.8479C31.8545 29.5922 34.0805 27.994 35.7928 26.0534C37.6193 23.9986 38.4755 21.4872 38.3613 18.5191C35.3933 19.0899 32.996 18.5191 31.1695 16.8068C29.4572 15.0945 28.6011 12.7543 28.6011 9.78627ZM0.861328 9.78627C0.861328 7.04655 1.77457 4.8776 3.60105 3.27943C5.54169 1.5671 7.99603 0.710938 10.9641 0.710938C14.617 0.710938 17.528 1.79541 19.6969 3.96436C21.98 6.13331 23.1216 9.32966 23.1216 13.5534C23.1216 17.5488 22.4937 20.9735 21.238 23.8274C19.9823 26.6812 18.4412 29.0785 16.6148 31.0191C14.9024 32.9598 13.0759 34.5009 11.1353 35.6424C9.19466 36.6698 7.53941 37.4118 6.16955 37.8685L1.37503 30.8479C4.11475 29.5922 6.34078 27.994 8.05311 26.0534C9.87959 23.9986 10.7358 21.4872 10.6216 18.5191C7.65356 19.0899 5.2563 18.5191 3.42982 16.8068C1.71749 15.0945 0.861328 12.7543 0.861328 9.78627Z" fill="#17BBD1"/>
                        </svg>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>

    new Swiper(".offset-slider-{{ section.id }}", {
        slidesPerView: "auto",
        // centeredSlides: true,
        spaceBetween: 20,
        navigation: {
            nextEl: ".offset-slider-{{ section.id }}-button.swiper-button-next",
            prevEl: ".offset-slider-{{ section.id }}-button.swiper-button-prev",
        },
    });
</script>

{% schema %}
{
  "name": "Slider center offset",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Tailored Programming",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "Vitality Blueprint helps high performers in every field",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "header-btn-label",
      "default": "View Sample Report",
      "label": "Button label "
    },
    {
      "type": "text",
      "id": "header-btn-link",
      "default": "#",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding top desktop",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom desktop",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 100
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Sean O’Malley",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "default": "UFC Champion",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "text",
          "default": "Visit Vitality’s nationwide lab network with over 2,000 locations for a blood draw. ",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
